<h1>Listing books</h1>

<table border="1">
  <tr bgcolor="#c0ffc0">
    <th>Isbn</th>
    <th>Title</th>
    <th>Price</th>
    <th>Publish</th>
    <th>Publisher</th>
    <th>Cd</th>
    <th>Image</th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr style="background-color:<%= cycle('#FFffFF','#FFff99') %> ">
    <td><%= book.isbn %></td>
    <td><%= book.title %></td>
    <td><%= number_to_currency(book.price, :unit => 'ï¿¥', :precision => 0) %></td>
    <td><%= book.publish %></td>
    <td><%= book.publisher %></td>
    <td><%= book.cd %></td>

    <td>
      <% if book.book_images[0] %>
        <%if book.book_images[0].image_name != nil%>
          <%= image_tag book.book_images[0].image_name %>
        <% elsif %>
          <%= image_tag "no-image.jpg"%>
        <% end  %>
      <% elsif %>
        <%= image_tag "no-image.jpg"%>
      <% end %>
    </td>
    <td><%= link_to 'Show', book %><br/>
        <%= link_to 'Edit', edit_book_path(book) %><br/>
        <%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

