<%#*<h1>Listing books</h1>%>
<%= image_tag "title_image.JPG" %>
<hr/>

<div class="main">
  <table border="0">
    <% @books.each do |book| %>
      <tr style="background-color:<%= cycle('#FFffFF','#FFff99') %> ">
        <td>
          <% if book.book_images[0] %>
            <%if book.book_images[0].image_name != nil%>
              <%#= image_tag book.book_images[0].image_name, :width => "120" %>
          <%= book_image_tag(book.id,book.book_images[0].id,book.book_images[0].image_name,120) %>
            <% elsif %>
              <%= image_tag "no-image.jpg", :width => "120"%>
            <% end  %>
          <% elsif %>
            <%= image_tag "no-image.jpg", :width => "120"%>
          <% end %>
        </td>

        <td>
          <h2><%= book.title %></h2>
          <%= book.publish %><br/>
          <%= number_to_currency(book.price, :unit => '￥', :precision => 0) %>&nbsp;&nbsp;
          発行：<%= book.publisher %>&nbsp;&nbsp;
          ISBN :<%= book.isbn %><br/>
          CD：<%= book.cd %>
        </td>

        <td><%= link_to 'Show', book %><br/>
          <%= link_to 'Edit', edit_book_path(book) %><br/>
          <%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </table>
</div>
<br />

<%= link_to 'New Book', new_book_path %>
