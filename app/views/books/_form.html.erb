<%= form_for(@book, :html => {:multipart => true}) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :isbn %><br />
    <%= f.text_field :isbn %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :publish %><br />
    <%= f.text_field :publish %>
  </div>
  <div class="field">
    <%= f.label :publisher %><br />
    <%= f.date_select :publisher %>
  </div>
  <div class="field">
    <%= f.label :cd %><br />
    <%= f.check_box :cd %>
  </div>
  <div class="field">
    <% if @book.img_url != nil%>
      <%= image_tag (@book.img_url)%>
    <% end %>

    <%= f.label :image %><br />
    <%= f.file_field :img_url %> 
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
